</head>
<body>
    <div id="topline"></div>

    <div id="header" class="unselectable">
        <img src="~/Assets/Images/logo.png" alt="DPX" />
        <h1>
            Desenvolvimento<br />
            de Planilhas em Excel</h1>
        <div id="menu">
            <ul>
                <li><a href="#" class="active">Capa</a> </li>
                <li class="separator">|</li>
                <li><a href="#">Empresa</a> </li>
                <li class="separator">|</li>
                <li><a href="#">Serviços</a> </li>
                <li class="separator">|</li>
                <li><a href="#">Clientes</a> </li>
                <li class="separator">|</li>
                <li><a href="#">Contato</a> </li>
            </ul>
        </div>
    </div>

    @RenderBody()

    <div class="clear"></div>

    <div id="footer">
        <div class="sitemap">
            <ul>
                <li>
                    <a href="#">Capa</a>
                </li>
                <li>
                    <a href="#">Empresa</a>
                </li>
                <li>
